<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Incomplete</title>
    <link rel="stylesheet" href="/public/css/incompleted.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Protest+Riot&family=Sansita:ital,wght@0,400;0,700;0,800;0,900;1,400;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
</head>
<body>
    <nav class="nav-bar">
        <div class="logo-title">
            <div class="heading">
                <img class="logo" src="/public/assets/logo.png" alt="logo">
                <span class="title">TaskVault</span>
            </div>
        </div>
        <div class="nav-btns">
            <div class="home-btn">
                <form action="/" method="get">
                    <button type="submit">Home</button>
                </form>
            </div>
            <div class="add-btn">
                <form action="/task/add" method="get">
                    <button type="submit">Add New Task</button>
                </form>
            </div>
            <div class="completed-btn">
                <form action="/task/complete" method="get">
                    <button type="submit">Completed</button>
                </form>
            </div>
            <div class="incompleted-btn">
                <form action="/task/incomplete" method="get">
                    <button type="submit" style="background-color: black; color:white">Incompleted</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="incompleted-tasks">
        <% if (allTaskInfo && allTaskInfo.length > 0) { %>
            <% allTaskInfo.forEach(function(a) { %>
                <div class="tasks">
                    <h1><%= a.taskTitle %></h1>
                    <h3><%= a.task %></h3>
                    <p>Created : <%= a.timeCreated %> <%= a.dateCreated %></p>
                    <p>Deadline : <%= a.dueTime %> <%= a.dueDate %></p>
                    <form action="/task/<%= a.id %>/edit" method="GET">
                        <button class="edit-btn">Edit Task  <i class="fa-solid fa-pen-to-square" style="color: #1f62d6;"></i></button>
                    </form>
                    <form action="/task/<%= a.id %>/complete" method="post">
                        <button class="complete-btn">Completed  <i class="fa-solid fa-circle-check" style="color: #21ce14;"></i></button>
                    </form>
                    <form action="/task/<%= a.id %>/delete?_method=DELETE" method="post">
                        <button class="delete-btn">Delete <i class="fa-solid fa-trash-can" style="color: #dd0303;"></i></button>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
            <h1>No incomplete tasks</h1>
        <% } %>
    </div>
</body>
</html>
